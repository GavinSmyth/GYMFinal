<p id="notice"><%= notice %></p>

<h1 class = "title">Gym Classes</h1>
<div class = "page-conatiner">

<table class = "table">

  <thead>
  <%= stylesheet_link_tag 'gym_classes', media: 'all', 'data-turbolinks-track': 'reload' %>
    <tr>
      <th>Type</th>
      <th>Ptname</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gym_classes.each do |gym_class| %>
      <tr>
        <td><%= gym_class.Type %></td>
        <td><%= gym_class.PTName %></td>
        <td><%= gym_class.Date %></td>
        <td><%= gym_class.Time %></td>
        <td><%= link_to 'Show', gym_class %></td>
        <td><%= link_to 'Edit', edit_gym_class_path(gym_class) %></td>
        <td><%= link_to 'Destroy', gym_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin == true %>
<%= link_to 'New Gym Class', new_gym_class_path %>
<% end %>
</div>
