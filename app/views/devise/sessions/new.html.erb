
<%= stylesheet_link_tag 'forms', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

<div class="wrapper fadeInDown">
<div id="formContent">
<div class="fadeIn first">
<img src="https://static.vecteezy.com/system/resources/thumbnails/000/595/983/small/04012019-25.jpg" id="icon" alt="User Icon" />
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, type: 'email', autocomplete: "email" %>
  </div>

  <div class="password-field">
    <%= f.label :password %><br />
    <%= f.password_field :password, type: 'password', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
