
<%= stylesheet_link_tag 'recipies', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
         <% if flash[:alert] %>
             <div class="alert alert-warning"><%= flash[:alert] %></div>
        <% end %>
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true, class: "search-form") do %>
          <div class="form-group">
            <%= label_tag :recipe, 'Type amount of calories to get meals for a day! '%>
            <%= text_field_tag :recipe, nil, placeholder: 'Eg. 1000', class: 'form-control search-input' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
        <div class="search-results">
        
        </div>
      </div>
    </div>
  </div>


<div class="row" style=" padding: 15px 0;">
<% @recipe.each do |r| %>
<div class ="col-lg-4">
<div class="card" style="width: 20rem;">
  <img src=<%= "https://spoonacular.com/recipeImages/" + r["id"].to_s + "-556x370.jpg"%> class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Title: <h8><%= r["title"] %></h8>
    <h5 class="card-title">Time: <%= r["readyInMinutes"] %> minutes</h5>
    <h5 class="card-title">Servings: <%= r["servings"] %></h5>
    
  </div>
</div>
</div>
<% end %>
</div>

<div class="row" style=" padding: 15px 0;">

<div class ="col-lg-12">
<div class="card" style="width: 67rem;     text-align: center;">
  <div class="card-body">
    <h5 class="card-title">Calories: <%= @recipe1["calories"] %></h5>
    <h5 class="card-title">Protein: <%= @recipe1["protein"] %></h5>
    <h5 class="card-title">Fat: <%= @recipe1["fat"] %></h5>
    <h5 class="card-title">Carbohydrates: <%= @recipe1["carbohydrates"] %></h5>
  
    
  </div>
</div>
</div>

</div>
 